/*
    Spanish
*/

body
  background offwhite
  font-size 13px


.dictionary-grid, .word-detail
  display flex
  flex-wrap wrap
  max-width 1240px
  margin 0 auto

.word, .box
  flex-basis calc(33.333% - 4rem)
  flex-grow 1
  flex-shrink 0
  margin 0 2rem 2rem 2rem
  padding 3rem 2rem 2rem
  border 1px solid lightgray
  background white
  box-shadow 0 0 0 5px rgba(0,0,0,0.03);
  position relative
  font-size 13px

  .meaning
    display block
    border-bottom 1px solid lightgray
    padding 10px 0
    strong
        padding-right 20px
  .lnr
    font-size 24px
    padding-right 15px
    text-decoration none
    line-height 30px
    &:hover
      color blue
    
  .word-control  
    float right
    position  absolute
    top 15px
    right 10px
    a
       text-decoration none
       color #000
       &:hover
         text-decoration none

.add-new-word
  display block
  width 100%
  text-align center
  margin-bottom 30px
  .add-form
    margin 0 auto
    text-align left
    max-width 50%
    padding 3rem 2rem 2rem
    background white
    box-shadow 0 0 0 5px rgba(0,0,0,0.03);
    position relative
    font-size 13px
    border 1px solid lightgray
    input
      width calc(78% - 40px)


.word-detail

  .word, .box
    font-size:16px
  .lnr-cog
    display none


.spanish-player
   width 65px !important
   height 30px !important
   margin-right 15px
   float left

.row
  margin-bottom 15px
  label
    width 20%
    display inline-block
    min-width 130px


      





/*
    Spanish
*/

    
  .word-control  
    float right
    position  absolute
    top 15px
    right 10px
    a
       text-decoration none
       color #000
       &:hover
         text-decoration none

.add-new-word
  display block
  width 100%
  text-align center
  margin-bottom 30px
  .add-form
    margin 0 auto
    text-align left
    max-width 50%
    padding 3rem 2rem 2rem
    background white
    box-shadow 0 0 0 5px rgba(0,0,0,0.03);
    position relative
    font-size 13px
    border 1px solid lightgray
    min-width 500px
    input
      width calc(78% - 40px)


.word-detail

  .word, .box
    font-size:16px
  .lnr-cog
    display none

.spanish-player
   width 65px !important
   height 30px !important
   float right

.row
  margin-bottom 15px
  label
    width 20%
    display inline-block
    min-width 130px




@media screen and (max-width: 767px)
  h1
    font-size 4rem
  .word, .box
    flex-basis calc(100% - 2rem)
    margin: 0 1rem 2rem 1rem

  
  .add-new-word
    .add-form
      max-width 100%
      min-width 0

 

@media screen and (max-width: 560px)
  .word, .box
    flex-basis calc(100% - 2rem)
    margin: 0 1rem 2rem 1rem

  .row label
      min-width 120px
      .add-new-word
          .add-form
            padding 2rem 1rem 4rem

            button
              position static !important
              float right

            input
              width: calc(100% - 130px)
          


